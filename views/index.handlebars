<div class ="container">
  <div class ="row text-center">
    

    <img id='burgpic' src='./assets/images/burger.jpg' style="margin-top:5%;">
    </div>
    <br>
    
    <div class ="row">


    <div class="col-sm-4" id ="col1">
    <h2 style ="margin-left:50px;">Burgers</h2>

    <ul>
    {{#each burgers}}
      {{#unless this.devoured}}



<div class="col-xs-3 text-center">
        <li class ="list-unstyled">
          {{this.name}} 
          <form method="POST" action="/devour?_method=PUT">
          
            
            <button type="submit" name="burgerid" value={{this.id}} class="btn btn-danger btn-xs">Devour!</button>
          </form>
</div>

          
        </li>
      {{/unless}}
    {{/each}}
    </ul>
    </div>

    <div class="col-sm-4">

    <h1 style ="margin-left:50px;">Eat-Dat-Burger!</h1>
    <h2 class="text-center">Add a burger</h2>
    <form method="POST" action="/add" class="button-size">
<div class="form-group">
      <label for="burg">Burger Name:</label>
      <input type="text" id="burger" name="name">    
    </div>
    

    <div class="form-group">
    <label for="finished"> Is it devoured? </label><br>
    <input type="radio" name="finished" value="1"> Devoured <br>
    <input type="radio" name="finished" value="0"> Not Devoured<br>

    <button type="submit" id="add" name="burgerid" value={{this.id}} class="btn btn-danger btn-lg">Add burger</button>
    </form>

    </div>
    </div>

    <div class="col-sm-4" id ="col3">
    <h2>Devoured Burgers</h2>

    <ul class="list-unstyled">
    {{#each burgers}}
      {{#if this.devoured}}
        <li>
          {{this.name}}

          <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="false">
           </form>

        </li>
      {{/if}}
    {{/each}}
    </ul>
    </div>

 </div>
</div>